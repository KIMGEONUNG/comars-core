{
  "figure": {
    "prefix": ["figure"],
    "body": [
      "<figure>",
      "<img src=\"${1:src}\" alt=\"fail\" style=\"width:100%\">",
      "<figcaption align = \"center\"><b>${2:caption}</b></figcaption>",
      "</figure>"
    ],
    "description": [
      "description"
    ]
  },
  "details": {
    "prefix": ["details"],
    "body": [
      "<details>",
      "<summary>${1:text}</summary>",
      "</details>"
    ],
    "description": [
      "description"
    ]
  },
  "blue text": {
    "prefix": ["bt"],
    "body": [
      "<span style=\"color:blue\">${1:text}</span>"
    ],
    "description": [
      "blue text"
    ]
  },
  "red text": {
    "prefix": ["rt"],
    "body": [
      "<span style=\"color:red\">${1:text}</span>"
    ],
    "description": [
      "red text"
    ]
  },
  "green text": {
    "prefix": ["gt"],
    "body": [
      "<span style=\"color:green\">${1:text}</span>"
    ],
    "description": [
      "green text"
    ]
  }
}
